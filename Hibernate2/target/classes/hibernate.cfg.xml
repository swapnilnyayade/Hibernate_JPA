<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/hibernate2</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="cache.use_second_level_cache">true</property>
		<property name="cache.region.factory_class">org.hibernate.cache.ehcache.internal.EhcacheRegionFactory</property>
		<mapping resource="com/swap/Hibernate2/embeddable/Teacher.hbm.xml"/>
		<mapping resource="com/swap/Hibernate2/onetoone/Question.hbm.xml"/>
		<mapping resource="com/swap/Hibernate2/onetoone/Answer.hbm.xml"/>
		<mapping resource="com/swap/Hibernate2/onetomany/User.hbm.xml"/> 
		<mapping resource="com/swap/Hibernate2/manytomany/Emp.hbm.xml"/>
		<mapping resource="com/swap/Hibernate2/manytomany/Project.hbm.xml"/> 
		<mapping resource="com/swap/Hibernate2/firstandsecondcache/Student.hbm.xml"/>
	</session-factory>
</hibernate-configuration>